<div class="container mx-auto px-4 py-8">
  <!-- Header Section with Stats -->
  <div class="flex flex-col md:flex-row justify-between items-start md:items-center mb-8 gap-4">
    <div>
      <h1 class="text-3xl font-bold text-gray-800">Your Beverage Journal</h1>
      <p class="text-gray-600 mt-2">Track your daily hydration and beverage consumption</p>
    </div>

    <div class="bg-gradient-to-r from-blue-50 to-indigo-50 rounded-xl p-4 shadow-sm w-full md:w-auto mb-4 border border-indigo-50">
      <div class="flex items-center justify-center space-x-6">
        <div class="text-center">
          <p class="text-xl font-bold text-blue-600"><%= @entries_this_week.count %></p>
          <p class="text-xs text-gray-500">This week</p>
        </div>
        <div class="text-center">
          <p class="text-xl font-bold text-indigo-600"><%= @total_quantity %> <%= @main_unit %></p>
          <p class="text-xs text-gray-500">Total consumed</p>
        </div>
        <div class="text-center">
          <p class="text-xl font-bold text-green-600"><%= @favorite_type %></p>
          <p class="text-xs text-gray-500">Most frequent</p>
        </div>
      </div>
    </div>
  </div>

  <!-- Main Content Grid -->
  <% if @beverage_entries.any? %>
  <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
    <% @beverage_entries.each do |entry| %>
    <%= render 'card', entry: entry %>
    <% end %>
  </div>
  <% else %>
  <div class="text-center py-12 bg-white rounded-lg shadow">
    <svg class="mx-auto h-8 w-8 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
    </svg>
    <h3 class="mt-2 text-lg font-medium text-gray-900">No beverage entries yet</h3>
    <p class="mt-1 text-sm text-gray-500">Get started by adding your first beverage.</p>
  </div>
  <% end %>
</div>

<!-- Your Original Floating Action Button -->
<div class="fixed bottom-3 right-3 w-24 flex justify-center">
  <%= link_to new_beverage_entry_path, class: "flex items-center justify-center w-20 h-8 rounded-full bg-blue-600 hover:bg-blue-700 text-white shadow-md px-2 whitespace-nowrap" do %>
  + New Entry
  <% end %>
</div>
